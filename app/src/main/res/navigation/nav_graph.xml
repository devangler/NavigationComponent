<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.navigationcomponent.fragment.HomeScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreen_to_nextScreen"
            app:destination="@id/nextScreen" />
    </fragment>
    <fragment
        android:id="@+id/nextScreen"
        android:name="com.example.navigationcomponent.fragment.NextScreen"
        android:label="fragment_next_screen"
        tools:layout="@layout/fragment_next_screen" />
</navigation>